{
  "name": "pi-payment-gateway/php-sdk",
  "description": "PHP SDK for Pi Payment Gateway",
  "type": "library",
  "require": {
    "php": ">=8.1",
    "guzzlehttp/guzzle": "^7.8",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "squizlabs/php_codesniffer": "^3.7",
    "phpstan/phpstan": "^1.10"
  },
  "autoload": {
    "psr-4": {
      "PiPaymentGateway\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PiPaymentGateway\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "cs": "phpcs",
    "stan": "phpstan analyse src tests"
  },
  "license": "MIT"
}